<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/intro_image"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_height="228dp"
        android:contentDescription="@string/intro_image"
        android:visibility="visible"
        tools:src="@drawable/img1" />

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="35dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:text="Fresh Food" />

    <TextView
        android:id="@+id/intro_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        android:lineSpacingExtra="16dp"
        android:padding="10dp"
        android:textSize="20sp"
        tools:text="Straight from our kitchen to your doorstep, enjoy the taste of fresh food." />

</LinearLayout>