<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDeliveryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_ncs</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IntroScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>

    <style name="LoginScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/red_ncs</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomEditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

       <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>

    </style>

    <style name="PositiveButtonStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/crimson</item>
    </style>



</resources>